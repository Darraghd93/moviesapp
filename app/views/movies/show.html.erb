<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @movie.title %>
</p>

<p>
  <b>Poster:</b>
  <%= image_tag(@movie.poster, :size => "80x80" )%>
</p>

<p>
  <b>Trailer:</b>
  <%= sanitize @movie.trailer, :tags => ['iframe'] %>

</p>

<p>
  <b>Genre:</b>
  <%= @movie.genre.name %>
</p>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
