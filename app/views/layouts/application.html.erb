<!DOCTYPE html>
<html>
<head>
  <title>Moviesapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="banner">
	<%= image_tag("rails.png", :size => "100x50") %>
	DT354-3
</div>
<div id="nav">
    <ul>
		<% if !signed_in? %>
			<li><%= link_to "Sign In", signin_path %></li>
		<% else %>
			<li>Signed in as <%= @current_user.name %></li>
			<li><%= link_to "Sign Out", signout_path %></li>
		<% end %>
		
		
      <li><%= link_to "Questions"%></li>
      <li><%= link_to "Movie News", 'http://oscar.go.com/nominees' %></li>
      <li><%= link_to "Movies", movies_path%></li>
	  
    </ul>
</div>

<% flash.each do |key, value| %>
		<div class="flash  <%= key %>">
		<%= value %>
	</div>
<% end %>

<%= yield %>

<div id="footer">
	DT354-3
</div>

</body>
</html>
